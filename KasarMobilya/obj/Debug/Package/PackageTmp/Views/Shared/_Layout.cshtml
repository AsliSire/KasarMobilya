                        </ul>
                    </li>
                    <li><a href="@Url.Action("BarTabureleri","Product")">@Html.Localize("bar_tabureleri").ToString()</a></li>
                    <li><a href="@Url.Action("BahceMobilyalari","Product")">@Html.Localize("bahce_mobilyalari").ToString()</a></li>

                    <li>
                        <a href="#0">@Html.Localize("moduler_mobilyalar")</a>
