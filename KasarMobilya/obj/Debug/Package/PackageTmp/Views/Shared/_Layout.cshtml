                                    <li><a href="@Url.Action("CalismaMasalari","Product")">@Html.Localize("calisma_masalari").ToString()</a></li>
                                    <li><a href="@Url.Action("Sifonyerler","Product")">@Html.Localize("sifonyerler").ToString()</a></li>

                                </ul>
                            </li>
                            <li><a href="@Url.Action("Besikler","Product")">@Html.Localize("besikler").ToString()</a></li>
                            <li><a href="@Url.Action("Ranzalar","Product")">@Html.Localize("ranzalar").ToString()</a></li>
                            <li><a href="@Url.Action("Vestiyerler","Product")">@Html.Localize("vestiyerler").ToString()</a></li>
                            <li><a href="@Url.Action("CokAmacliDolaplar","Product")">@Html.Localize("cok_amacli_dolaplar").ToString()</a></li>
                            <li><a href="@Url.Action("Sehpalar","Product")">@Html.Localize("sehpalar").ToString()</a></li>
                        </ul>
                    </li>

                </ul>
            </li>
            <li>@Html.ActionLink(@Html.Localize("kurumsal").ToString(), "About", "Home")</li>
            <li>@Html.ActionLink(@Html.Localize("iletisim").ToString(), "Contact", "Home")</li>
            <li class="languageselector">@Html.ActionLinkLocalization("En", "Index", "Locales", new { lang = "en_US" })</li>
            <li class="languageselector">@Html.ActionLinkLocalization("Tr", "Index", "Locales", new { lang = "tr_TR" })</li>
        </ul>

    </div>

    @RenderBody()

    <footer class="footer">
        <div class="footer-left col-md-4 col-sm-6">
            <p class="about">
                <span>@Html.Localize("hakkimizda").ToString()</span>@Html.Localize("footertext").ToString()

            </p>
            <div class="icons">
                <a href="#"><i class="fa fa-facebook"></i></a>
