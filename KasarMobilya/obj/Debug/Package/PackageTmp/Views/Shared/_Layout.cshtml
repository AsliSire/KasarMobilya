                            <li>
                                <a href="@Url.Action("GencOdasiUrunleri","Product")">@Html.Localize("genc_odasi_takimlari").ToString()</a>
                                <ul>
                                    <li><a href="@Url.Action("Bazalar","Product")">@Html.Localize("bazalar").ToString()</a></li>
                                    <li><a href="@Url.Action("Dolaplar","Product")">@Html.Localize("dolaplar").ToString()</a></li>
